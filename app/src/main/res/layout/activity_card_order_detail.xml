<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhudong="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.fuexpress.kr.ui.view.TitleBarView
        android:id="@+id/card_order_detail_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhudong:text="@string/card_order_detils_title_msg" />

    <ScrollView
        android:id="@+id/card_order_detail_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/default_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_order_detail_order_number"
                            android:textSize="12sp"
                            android:textColor="@color/card_order_text_color_blank"
                            />

                        <TextView
                            android:id="@+id/card_order_detail_order_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/card_order_text_color_blank"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_order_detail_order_date"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            />

                        <TextView
                            android:id="@+id/card_order_detail_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_order_detail_order_grand_total"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            />

                        <TextView
                            android:id="@+id/card_order_detail_grand_total_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_order_detail_order_state"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            />

                        <TextView
                            android:id="@+id/card_order_detail_state_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_order_detail_order_type"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            />

                        <TextView
                            android:id="@+id/card_order_detail_type_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/card_order_detail_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_for_card_order_cancel_bg"
                    android:padding="0dp"
                    android:textSize="13sp"
                    android:textColor="@color/card_order_text_color_blank"
                    android:text="@string/card_order_detail_cancel_order"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_order_detail_payment_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/String_payment_type"
                    android:textSize="13sp"
                    android:textColor="@color/text_gray"/>

                <TextView
                    android:id="@+id/card_order_detail_payment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/card_order_text_color_blank"/>

                <ImageView
                    android:id="@+id/card_order_detail_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>

            <ListView
                android:id="@+id/card_order_detail_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:id="@+id/recharge_order_detail_layout"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recharge_order_detail_type_tv"
                        android:textSize="13sp"
                        android:textColor="@color/card_order_text_color_blank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cart_order_card_msg_title_type_submit"/>

                    <TextView
                        android:id="@+id/recharge_order_detail_parcel_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/card_order_text_color_blank"
                        android:text="Parcel"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/recharge_order_detail_freight_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        android:text="@string/recharge_order_detail_freight"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/recharge_order_detail_freight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.00"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        android:text="@string/recharge_order_detail_balance_pay"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/recharge_order_detail_balance_pay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="￥0.00"
                        android:textColor="@color/text_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        android:text="@string/recharge_order_detail_need_pay"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/recharge_order_detail_need_pay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.00"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/card_order_detail_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gift_card_total_msg"
            android:textColor="@color/title_color"/>

        <TextView

            android:id="@+id/card_order_detail_pay_grand_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥0.00"
            android:textColor="@color/red_shape"/>


        <Button
            android:id="@+id/card_order_detail_pay_btn"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_red_btn_drawable"
            android:padding="0dp"
            android:text="@string/order_goto_pay"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
