<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:longer="http://schemas.android.com/apk/res-auto"
    android:background="@color/default_bg"
    android:orientation="vertical"
    >

<com.fuexpress.kr.ui.view.TitleBarView
    android:layout_width="match_parent"
    android:id="@+id/title_in_preferences"
    longer:text ="@string/String_perferences"
    android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/language_in_preferences"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:text="@string/string_for_preferences_language"/>

        <TextView
            android:id="@+id/tv_in_preferences_lanague"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/iv_in_preferences_tab_01"
            android:text="123123"
            android:textColor="@color/gray_caca"/>

        <ImageView
            android:id="@+id/iv_in_preferences_tab_01"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/fill_5"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/currency_in_preferences"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:text="@string/string_for_preferences_currency"/>

        <TextView
            android:id="@+id/tv_in_preferences_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/iv_in_preferences_tab_02"
            android:text="123123"
            android:textColor="@color/gray_caca"/>

        <ImageView
            android:id="@+id/iv_in_preferences_tab_02"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/fill_5"/>
    </RelativeLayout>


</LinearLayout>
