<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/default_bg"
              android:layout_marginBottom="45dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cancelIv"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/cancelx"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/change_pay_method"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/contractServiceLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone"
        android:background="#ffffff">
        <TextView
            android:id="@+id/yueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical ="true"
            android:text="优先使用账户余额 ￥0.00"
            android:textColor="@color/black_title"
            android:textSize="@dimen/me_fragment_title_14" />

        <CheckBox
            android:id="@+id/yueCb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/chk_agee_provision_background"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical ="true"
            android:checked="true"
            android:button="@null" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical ="true"
            android:src="@mipmap/wechat_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical ="true"
            android:text="@string/String_wechat_pay"
            android:textColor="@color/black_title"
            android:textSize="@dimen/me_fragment_title_14" />

        <CheckBox
            android:checked="true"
            android:id="@+id/weCb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/chk_agee_provision_background"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical ="true"
            android:button="@null" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"

        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical ="true"
        android:src="@mipmap/alipay_c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_centerVertical ="true"
        android:text="@string/String_ali_pay"
        android:textColor="@color/black_title"
        android:textSize="@dimen/me_fragment_title_14" />


        <CheckBox
            android:id="@+id/aliCb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/chk_agee_provision_background"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical ="true"
            android:button="@null" />
    </RelativeLayout>
    <Button
        android:id="@+id/tv_login"
        android:layout_width="330dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_for_login_btn"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="17sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:background="@color/black"></LinearLayout>
</LinearLayout>