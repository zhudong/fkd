<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_01_in_down_to_up_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_down_2_up"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_in_down_to_up_dialog_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/down_to_up_string_take_photo"
            android:textColor="@color/blue_0047ff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_bg"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_in_down_to_up_dialog_take_choose_in_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/down_to_up_string_choose_from_album"
            android:textColor="@color/blue_0047ff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_bg"/>

        <TextView
            android:id="@+id/tv_in_down_to_up_dialog_take_choose_in_location_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/down_to_up_string_choose_from_l0cation_album"
            android:textColor="@color/blue_0047ff"
            android:visibility="gone"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_for_down_2_up">

        <TextView
            android:id="@+id/tv_in_down_to_up_dialog_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/down_to_up_string_cancle"
            android:textColor="@color/blue_0047ff"/>

    </RelativeLayout>


</LinearLayout>
