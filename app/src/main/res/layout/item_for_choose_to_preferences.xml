<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="50dp">

    <TextView
        android:id="@+id/tv_in_item_choose_for_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="@string/string_for_language_default"/>

    <TextView
        android:id="@+id/tv_in_item_choose_for_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_in_item_choose_for_preferences"/>

    <ImageView
        android:id="@+id/iv_in_item_choose_for_preferences_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/small_select1"/>
</RelativeLayout>