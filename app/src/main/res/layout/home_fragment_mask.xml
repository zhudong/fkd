<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/tips_bg"
              android:orientation="vertical">
    <!--<LinearLayout
        android:id="@+id/ll_for_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tips_bg"
        android:orientation="vertical"
        >-->

        <TextView
            android:layout_marginLeft="7dp"
            android:id="@+id/tv_tips_left_tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@mipmap/home_tips_bg"
            android:drawableRight="@mipmap/arrow_down_white"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="11dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="@string/string_seoul"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_arrow_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/home_tips_arrow2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:padding="5dp"
                    android:layout_marginTop="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_home_mask_text_01"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_home_mask_texxt_02"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/package_tips_button"
                    android:gravity="center"
                    android:text="@string/package_confirm"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>

        </RelativeLayout>


    <!--</LinearLayout>-->
</LinearLayout>