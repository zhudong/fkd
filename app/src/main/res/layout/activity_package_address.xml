<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:longer="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_e4e4"
              android:orientation="vertical">

    <com.fuexpress.kr.ui.view.TitleBarView
        android:id="@+id/title_in_pa_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        longer:text=""/>

    <com.fuexpress.kr.ui.view.RefreshListView
        android:id="@+id/address_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/default_bg"
        android:divider="@null"/>
</LinearLayout>
