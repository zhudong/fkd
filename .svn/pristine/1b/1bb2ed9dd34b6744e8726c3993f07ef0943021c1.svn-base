<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhudong="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <com.fuexpress.kr.ui.view.TitleBarView
        android:id="@+id/invite_title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhudong:text="@string/integral_management_resources_3" />

    <LinearLayout
        style="@style/layout_style"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/invite_icon" />

        <TextView
            android:id="@+id/invite_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/invite_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_666"
            android:textSize="12sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/invite_list_view"
        android:layout_width="match_parent"
        android:divider="@color/gary_e8e8"
        android:dividerHeight="1dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
</LinearLayout>
