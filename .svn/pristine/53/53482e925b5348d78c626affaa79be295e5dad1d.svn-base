<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--我和评论-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="8dp">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img_person_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_default"
            app:sriv_left_bottom_corner_radius="20dp"
            app:sriv_left_top_corner_radius="20dp"
            app:sriv_right_bottom_corner_radius="20dp"
            app:sriv_right_top_corner_radius="20dp"/>


        <TextView
            android:id="@+id/tv_person_nicke_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_person_icon"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/img_person_icon"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="13sp"
            />


        <TextView
            android:id="@+id/tv_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_person_nicke_name"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/tv_person_nicke_name"
            android:drawablePadding="2dp"
            android:text="test"
            android:textColor="#FF999999"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_person_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_person_nicke_name"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/img_person_icon"
            android:drawablePadding="2dp"
            android:text="test"
            android:textColor="#FF666666"
            android:textSize="11sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="8dp"/>

    <TextView

        style="@style/ysf_horizontal_light_thin_divider"/>

</LinearLayout>