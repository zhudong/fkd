<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_title_normal"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_attend_crowd_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_crowd_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/tv_crowd_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <com.fuexpress.kr.ui.view.CrowdTimer
                android:id="@+id/crowd_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.fuexpress.kr.ui.view.CrowdProgressDetail
                android:id="@+id/crowd_progress_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="10dp"
                android:background="@color/divide_line"/>

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/text_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_service_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_buyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/text_gray"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/divide_line"/>

            <LinearLayout
                android:id="@+id/ll_extends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <com.fuexpress.kr.ui.view.OrderMessageView
                android:id="@+id/ov_order_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/divide_line"/>

            <TextView
                android:id="@+id/tv_delivery_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:gravity="left"
                android:lineSpacingExtra="4dp"
                android:text="asdflkjsa;lfkj;ls"
                android:textColor="@color/text_gray"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/divide_line"/>

            <TextView
                android:id="@+id/tv_item_detail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/fill_5"
                android:gravity="center_vertical"
                android:text="@string/String_item_detail"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/divide_line"/>


        <com.fuexpress.kr.ui.view.MyNumberCounter
            android:id="@+id/numbercounter_attend_crowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/btn_crowd_now"
            android:layout_width="115dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_for_crowd_now"
            android:gravity="center"
            android:text="@string/String_addend_crowd_now"
            android:textColor="@color/white"
            android:textSize="13sp"/>

    </RelativeLayout>

</LinearLayout>
