<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shipping_scheme_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
<!--
        <ImageView
            android:id="@+id/checked_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/cart_unselect" />-->
        <CheckedTextView
            android:id="@+id/checked_tv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:checkMark="?android:attr/listChoiceIndicatorSingle" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/checked_tv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shipping_title_tv"
                style="@style/system_Mytextsize_gray_11"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/shipping_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/shipping_fee_tv"
            style="@style/system_Mytextsize_black_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0.00" />
    </RelativeLayout>
</LinearLayout>
