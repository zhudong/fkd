<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_bg"
              android:orientation="vertical">

    <include layout="@layout/layout_title_normal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/delivery_direct_fu_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/direct_fu_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/String_direct_fu"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/delivery_direct_fu_help_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/direct_fu_title"
                    android:scaleType="center"
                    android:src="@mipmap/help"/>

                <ImageView
                    android:id="@+id/delivery_direct_fu_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/cart_unselect"/>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/delivery_direct_mail_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/direct_mail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/String_direct_mail_1"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/delivery_direct_mail_help_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/direct_mail_title"
                    android:scaleType="center"
                    android:src="@mipmap/help"/>

                <ImageView
                    android:id="@+id/delivery_direct_mail_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/cart_unselect"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/delivery_merge_order_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/merge_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/String_merge_order"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/delivery_merge_order_help_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/merge_order_title"
                    android:scaleType="center"
                    android:src="@mipmap/help"/>

                <ImageView
                    android:id="@+id/delivery_merge_order_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/cart_unselect"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/delivery_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/address_pin_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/package_address"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/address_pin_iv"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/delivery_name_and_phone_tv"
                        style="@style/system_Mytextsize_black_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/String_cart_consignee_msg"
                        android:textSize="13sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/delivery_default_address_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_red_btn_drawable"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/default_msg"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            />

                        <TextView
                            android:id="@+id/delivery_phone_tv"
                            style="@style/system_Mytextsize_gray_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ddddd"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_right"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_ware_house_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@mipmap/arrow_down"/>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>


            <LinearLayout
                android:id="@+id/delivery_commodity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone">

                <View
                    android:background="@drawable/shape_stroke"
                    android:layout_width="match_parent"
                    android:layerType="software"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="5dp"/>

                <TextView
                    android:id="@+id/tv_real_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/package_product_realy_price"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_real_price_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/package_product_realy_price_note"
                    android:textColor="#999999"
                    android:textSize="11sp"
                    android:layout_alignTop="@+id/tv_real_price_text"
                    android:layout_toRightOf="@+id/tv_real_price_text"
                    android:layout_toEndOf="@+id/tv_real_price_text"/>

                <TextView
                    android:id="@+id/tv_real_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_real_price_text"
                    android:layout_marginRight="10dp"
                    android:text="12"
                    android:textColor="#333333"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/tv_product_rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_real_price_text"
                    android:layout_marginLeft="40dp"
                    android:text="@string/package_product_tarrif"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_product_rate_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/package_product_tarrif_note"
                    android:textColor="#999999"
                    android:textSize="11sp"
                    android:layout_below="@+id/tv_real_price_text"
                    android:layout_toRightOf="@+id/tv_real_price_text"
                    android:layout_toEndOf="@+id/tv_real_price_text"/>


                <TextView
                    android:id="@+id/tv_product_tate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_product_rate_text"
                    android:layout_marginRight="10dp"
                    android:text="123"
                    android:textColor="#333333"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/tv_shipping_rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_product_rate_text"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:text="@string/package_shipping_tarrif"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_shipping_rate_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_shipping_rate_text"
                    android:layout_toRightOf="@id/tv_product_rate_text"
                    android:text="@string/package_product_tarrif_note"
                    android:textColor="#999999"
                    android:textSize="11sp"/>


                <TextView
                    android:id="@+id/tv_shipping_tate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_shipping_rate_text"
                    android:layout_marginRight="10dp"
                    android:text="123"
                    android:textColor="#333333"
                    android:textSize="12sp"/>

            </RelativeLayout>


            <Button
                android:id="@+id/delivery_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_margin="10dp"
                android:background="@drawable/selector_red_btn_drawable"
                android:text="@string/confirm"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
