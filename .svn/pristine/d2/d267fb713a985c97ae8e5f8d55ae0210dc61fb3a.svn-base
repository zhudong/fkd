<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:longer="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/default_bg"
        >
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:orientation="vertical"
                  android:layout_weight="1"
            >
        <com.fuexpress.kr.ui.view.TitleBarView
                android:id="@+id/tl_in_help_get_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                longer:text="@string/home_fg_help_02">

        </com.fuexpress.kr.ui.view.TitleBarView>

        <ScrollView
                android:layout_width="match_parent"
                android:id="@+id/sv_help_signed"
                android:layout_height="match_parent">
            <com.fuexpress.kr.ui.view.CustomListView
                    android:id="@+id/lv_in_help_me_get_package"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/default_bg"
                    android:dividerHeight="7dp"/>
        </ScrollView>
    </LinearLayout>

    <Button
            android:id="@+id/btn_help_signed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@color/title_bar_black"
            android:padding="0dp"
            android:text="@string/pick_up_submit"
            android:textColor="@color/black"
            android:textSize="15sp"/>
</LinearLayout>
