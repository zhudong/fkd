    android:layout_height="match_parent"
    android:background="@drawable/selector_for_add_album_item"
    android:minHeight="40dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_album_name_for_add_album"
            style="@style/system_Mytextsize_GRAY_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:text="@string/album_name"/>

        <TextView
            android:id="@+id/tv_tick_for_add_album"
            style="@style/system_Mytextsize_black_12"
            android:layout_width="wrap_content"
