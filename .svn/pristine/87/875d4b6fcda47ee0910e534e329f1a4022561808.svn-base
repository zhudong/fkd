<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/default_bg"
              android:layout_height="match_parent">
    <include layout="@layout/layout_title_normal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_666"
            android:text="@string/most_used_cities"
            android:textSize="@dimen/demand_no_size"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/first_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:background="@drawable/choose_city_btn"
                android:text="首尔"
                android:textSize="@dimen/choose_city_size_12"/>
            <Button
                android:id="@+id/second_btn"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:background="@drawable/choose_city_btn"
                android:text="首尔"
                android:textSize="@dimen/choose_city_size_12"/>
            <Button
                android:id="@+id/third_btn"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:background="@drawable/choose_city_btn"
                android:text="首尔"
                android:textSize="@dimen/choose_city_size_12"/>
            <Button
                android:id="@+id/forth_btn"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:background="@drawable/choose_city_btn"
                android:text="首尔"
                android:textSize="@dimen/choose_city_size_12"/>
            <Button
                android:id="@+id/fifth_btn"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:background="@drawable/choose_city_btn"
                android:text="首尔"
                android:textSize="@dimen/choose_city_size_12"/>
    </LinearLayout>

    </RelativeLayout>
    <com.fuexpress.kr.ui.view.SlidingTabLayout
        android:id="@+id/tab"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager" />
</LinearLayout>