<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:zhudong="http://schemas.android.com/apk/res-auto"
    android:background="@color/default_bg"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.fuexpress.kr.ui.view.TitleBarView
        android:id="@+id/krbank_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhudong:text="@string/cart_confirm_title_bar_title"/>
    <LinearLayout
        style="@style/layout_style"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="付款金额"/>

            <TextView
                android:id="@+id/krbank_info_pay_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩10,000"
                android:textSize="13sp"
                android:textColor="@color/gray_666"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="支付方式"/>

            <TextView
                android:id="@+id/krbank_info_pay_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行转账₩1,000"
                android:textSize="13sp"
                android:textColor="@color/gray_666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="其中账户余额支付"/>

            <TextView
                android:id="@+id/krbank_info_balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩9,000"
                android:textSize="13sp"
                android:textColor="@color/gray_666"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/black_0"
                android:text="还需支付"/>

            <TextView
                android:id="@+id/krbank_info_need_pay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩9,000"
                android:textSize="13sp"
                android:textColor="@color/black_0"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/layout_style"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="银行名称"/>

            <TextView
                android:id="@+id/krbank_info_bank_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX银行"
                android:textSize="13sp"
                android:textColor="@color/black_0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="收款人"/>

            <TextView
                android:id="@+id/krbank_info_payee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福快递"
                android:textSize="13sp"
                android:textColor="@color/black_0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="银行账号"/>

            <TextView
                android:id="@+id/krbank_info_bank_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5656-5623-5223-2332"
                android:textSize="13sp"
                android:textColor="@color/black_0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="汇款金额"/>

            <TextView
                android:id="@+id/krbank_info_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩9,000"
                android:textSize="13sp"
                android:textColor="@color/black_0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="汇款备注请填写以下红色数字："/>

            <TextView
                android:id="@+id/krbank_info_note_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678"
                android:textSize="13sp"
                android:textColor="@color/red"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/krbank_info_go_home_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:text="@string/card_payment_success_to_home_msg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/gray_999"
        android:textSize="10sp"
        android:text="@string/order_info_bottom_msg_1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/gray_999"
        android:textSize="10sp"
        android:text="@string/order_info_bottom_msg_2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/gray_999"
        android:textSize="10sp"
        android:text="@string/order_info_bottom_msg_3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/gray_999"
        android:textSize="10sp"
        android:text="@string/order_info_bottom_msg_4"/>
</LinearLayout>
