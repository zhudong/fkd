<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_number_minus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_for_number_counter"
        android:padding="5dp"
        android:src="@mipmap/reduce_icon"/>

    <EditText
        android:id="@+id/tv_number_current"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_for_counter_current"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:textColor="#000000"
        android:textSize="11dp"/>

    <ImageView
        android:id="@+id/iv_number_plus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_for_number_counter"
        android:padding="5dp"
        android:src="@mipmap/add_icon"/>
</LinearLayout>