<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/counpon_bg_available">

        <LinearLayout
            style="@style/layout_style"
            android:layout_width="wrap_content"
            android:layout_weight="3.5"
            android:background="@null"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coupon_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_0"
                android:textSize="13sp"
                android:text="福快递优惠券"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:text="￥"/>
                <TextView
                    android:id="@+id/coupon_item_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="32sp"
                    android:text="10"/>

                <TextView
                    android:id="@+id/coupon_item_uses_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_0"
                    android:textSize="14sp"
                    android:text="x5"/>
            </LinearLayout>

            <TextView
                android:id="@+id/coupon_item_desc_tv"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_999"
                android:textSize="11sp"
                android:text="一次性快递费用满2000可用"/>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_style"
            android:background="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/gray_666"
                android:text="使用期限"/>
            <TextView
                android:id="@+id/coupon_item_start_time_tv"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/gray_666"
                android:text="2016/09/01 09:00"/>
            <TextView
                android:id="@+id/coupon_item_end_time_tv"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/gray_666"
                android:text="2016/11/01 09:00"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
