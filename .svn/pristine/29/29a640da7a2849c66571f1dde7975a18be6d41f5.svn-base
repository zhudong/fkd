<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_in_normal_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/demand_list_topbg"/>

        <HorizontalScrollView
            android:id="@+id/hsv_imgs_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_phote_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_append_photo"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/bg_add"
                    android:padding="20dp"
                    android:src="@mipmap/demand_addimage"/>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/parcel_text_gray_99"
                android:text="@string/String_parcel_add_photo"/>

            <TextView
                style="@style/parcel_text_gray_99"
                android:layout_marginLeft="10dp"
                android:text="@string/String_parcel_photo_type"/>
        </LinearLayout>

        <com.fuexpress.kr.ui.view.InputBoxView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.fuexpress.kr.ui.view.InputBoxView>

        <com.fuexpress.kr.ui.view.InputBoxView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.fuexpress.kr.ui.view.InputBoxView>

        <com.fuexpress.kr.ui.view.InputBoxView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.fuexpress.kr.ui.view.InputBoxView>

        <com.fuexpress.kr.ui.view.InputBoxView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.fuexpress.kr.ui.view.InputBoxView>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_in_item_delete"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/demand_delete"/>
</RelativeLayout>