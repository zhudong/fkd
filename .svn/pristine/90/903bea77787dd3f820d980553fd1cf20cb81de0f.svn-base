<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_parcel_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/red_btn_bg_color"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_parcel_item_icon"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="女士休闲装牛角均码女士休闲装牛角均码女士休闲装牛角均码女士休闲装牛角均码女士休闲"
                android:textColor="#333333"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_where_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在哪儿买：Brban Life"
                android:textColor="#999999"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尺码:free"
                android:textColor="#999999"
                android:textSize="11sp"/>


            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="11sp"
                android:text="状态:已取消"/>
            <TextView
                android:id="@+id/tv_state_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="11sp"
                android:visibility="gone"
                android:text="买家取消订单"/>

            <TextView
                android:id="@+id/tv_item_price_end"
                android:textColor="#333333"
                android:textSize="11sp"
                android:text="$200.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/order_message_layout"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/payed_text_size_12"
                    android:text="@string/String_details_order_note_02"/>
                <TextView
                    android:id="@+id/order_message_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_02"
                    android:textSize="@dimen/payed_text_size_12"
                    android:text="订单留言："/>
            </LinearLayout>

            <TextView
                android:id="@+id/korea_color_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_02"
                android:textSize="@dimen/payed_text_size_12"
                android:text="订单留言："/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:layout_marginTop="55dp"
            android:gravity="center_vertical"
            android:text="x12"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/merchant_message_layout"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/message_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/payed_image_size"
                android:layout_height="@dimen/payed_image_size"
                android:src="@mipmap/connect"
                />
            <TextView
                android:layout_marginLeft="@dimen/payed_image_text_span"
                android:id="@+id/merchant_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="您好我已经为您处理完毕！"
                android:layout_centerVertical="true"
                android:textSize="@dimen/payed_text_size_12"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/message_2_layout"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/payed_image_size"
                android:layout_height="@dimen/payed_image_size"
                android:src="@mipmap/me_icon_01"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/payed_image_text_span"
                android:textColor="@color/black"
                android:text="只要现货"
                android:id="@+id/korea_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/payed_text_size_12"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/message_3_layout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                >
                <ImageView
                    android:layout_width="@dimen/payed_image_size"
                    android:layout_height="@dimen/payed_image_size"
                    android:src="@mipmap/translation"
                    android:id="@+id/anim_view"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/payed_image_text_span"
                    android:textColor="@color/auto_translate"
                    android:id="@+id/auto_translate_tv"
                    android:text="@string/auto_translate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/payed_text_size_12"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>