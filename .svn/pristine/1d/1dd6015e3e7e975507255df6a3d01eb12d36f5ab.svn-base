<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@color/default_bg"/>

    <ImageView
        android:id="@+id/iv_for_merchant_detail_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_for_merchant_detail_image_name"
            style="@style/system_Mytextsize_black_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:text="推荐商店的名字"/>

        <TextView
            android:id="@+id/tv_for_merchant_detail_image_time"
            style="@style/system_Mytextsize_black_10_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_for_merchant_detail_image_name"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="3dp"
            android:text="韩国，首尔"
            />

    </RelativeLayout>


</LinearLayout>