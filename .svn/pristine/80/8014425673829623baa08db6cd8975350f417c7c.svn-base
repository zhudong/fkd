<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="374dp"
              android:background="@color/white"
              android:minHeight="374dp"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_merchant_head_in_item_for_store_fragment_go_detail"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_merchant_head_in_item_for_store_fragment"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_merchant_name_in_item_for_store_fragment"
            style="@style/system_Mytextsize_black_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_merchant_head_in_item_for_store_fragment"
            android:text="商户名称"/>

        <TextView
            android:id="@+id/tv_merchant_location_in_item_for_store_fragment"
            style="@style/system_Mytextsize_black_12_gray_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_merchant_name_in_item_for_store_fragment"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_merchant_head_in_item_for_store_fragment"
            android:drawableLeft="@mipmap/pin"
            android:drawablePadding="2dp"
            android:text="商户,地址"/>

        <com.fuexpress.kr.ui.view.LikeOrFollowBtn
            android:id="@+id/lofb_in_store_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            />


        <RelativeLayout
            android:id="@+id/rl_follow_in_item_for_store_fragment"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_for_home_item_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/iv_follow_in_item_for_store_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/focus"/>

            <TextView
                android:id="@+id/tv_follow_in_item_for_store_fragment"
                style="@style/system_Mytextsize_black_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/iv_follow_in_item_for_store_fragment"
                android:text="关注"/>

            <TextView
                android:id="@+id/tv_follow_num_in_item_for_store_fragment_02"
                style="@style/system_Mytextsize_black_12_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_follow_in_item_for_store_fragment"
                android:text="100"/>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/iv_src_mer_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/card"/>

    <HorizontalScrollView
        android:id="@+id/hsl_for_item_store_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="3"
        android:scrollbars="none"
        >

        <LinearLayout
            android:id="@+id/ll_for_item_store_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_01"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_02"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_03"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_04"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_05"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_06"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_07"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_08"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_for_item_store_fragment_09"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/me2"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_for_item_store_fragment_last"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/home_add_and_like_bg"
                >

                <TextView
                    android:id="@+id/tv_in_item_for_store_last_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_in_item_for_store_last_line"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="@string/String_for_store_item_view_all"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_in_item_for_store_last_line"
                    android:layout_width="66dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="@color/gray_caca"/>

                <TextView
                    android:id="@+id/tv_in_item_for_store_last_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_in_item_for_store_last_line"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/String_for_store_item_view_all"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"/>
            </RelativeLayout>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>