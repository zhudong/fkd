<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="69dp"
              android:background="@color/white"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_in_item_hs"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <TextView
                android:id="@+id/tv_hs_item_title"
                style="@style/system_Mytextsize_black_13"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="12345667"/>

            <TextView
                android:id="@+id/tv_hs_item_price"
                style="@style/system_Mytextsize_black_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hs_item_title"
                android:layout_marginLeft="7dp"
                android:text="W123456"/>


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_hs_item_qty"
            style="@style/system_Mytextsize_black_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="X1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/arrow_right"/>
    </LinearLayout>
</LinearLayout>