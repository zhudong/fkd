<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.fuexpress.kr.ui.fragment.myneed.ToPayFragment">

    <com.fuexpress.kr.ui.view.RefreshListView
        android:id="@+id/lv_body"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg"/>

    <RelativeLayout
        android:id="@+id/rl_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_empty_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_empty_hint"
            android:layout_centerHorizontal="true"
            android:text="@string/string_need_no_item"/>
    </RelativeLayout>

</RelativeLayout>
