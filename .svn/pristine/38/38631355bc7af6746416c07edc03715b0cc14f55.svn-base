<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <com.fuexpress.kr.ui.view.TitleBarView
        android:id="@+id/title_in_order_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <GridView
            android:id="@+id/gv_show_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:numColumns="4"
            android:verticalSpacing="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/parcel_text_gray_99"
                android:text="@string/show_picture_tips" />

            <TextView
                style="@style/parcel_text_gray_99"
                android:layout_marginLeft="10dp"
                android:text="@string/String_parcel_photo_type" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7.2dp"
        android:layout_width="match_parent"
        android:layout_height="133.33dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                style="@style/system_Mytextsize_black_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:layout_marginTop="12.2dp"
                android:text="@string/show_context_tips" />

            <TextView
                style="@style/system_Mytextsize_red_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="9dp"
                android:text="*" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/ed_show_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.5dp"
                android:layout_marginTop="7.2dp"
                android:background="@null"
                android:hint="@string/show_context_tips_hint"
                android:textColor="@color/black"
                android:textColorHint="#999999"
                android:textSize="13sp" />
        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_order_show"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="13.3dp"
        android:background="@drawable/selector_btn_bg"
        android:text="@string/pick_up_submit"
        android:textAllCaps="false"
        android:textColor="@drawable/selector_btn_back_text"
        android:textSize="15sp" />


</LinearLayout>
