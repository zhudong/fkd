<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单日期+2015-12-30： 11:23：42"
            android:textColor="@color/black_title"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单总额：300.00 Y"
            android:textColor="@color/black_title"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/priceTv"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_raduis_red"
            android:id="@+id/TAGTv"
            android:layout_marginTop="21dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/crowd_"
                android:gravity="center"
                android:textSize="9sp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_centerVertical ="true"
            android:text="@string/card_order_detail_title_bar_wait_pay"
            android:textColor="@color/black_title"
            android:textSize="12sp"
            android:id="@+id/stateTv"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical ="true"
            android:src="@mipmap/fill_5"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"></LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.fuexpress.kr.ui.view.RatioLayout
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:picRatio="1">

            <ImageView
                android:id="@+id/icon_01"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_album_circle_bg"
                android:padding="1dp"
                android:src="@color/home_add_and_like_bg"/>
        </com.fuexpress.kr.ui.view.RatioLayout>
        <com.fuexpress.kr.ui.view.RatioLayout
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:picRatio="1">

            <ImageView
                android:id="@+id/icon_02"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_album_circle_bg"
                android:padding="1dp"
                android:src="@color/home_add_and_like_bg"/>
        </com.fuexpress.kr.ui.view.RatioLayout>
        <com.fuexpress.kr.ui.view.RatioLayout
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:picRatio="1">

            <ImageView
                android:id="@+id/icon_03"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_album_circle_bg"
                android:padding="1dp"
                android:src="@color/home_add_and_like_bg"/>
        </com.fuexpress.kr.ui.view.RatioLayout>
        <com.fuexpress.kr.ui.view.RatioLayout
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:picRatio="1">

            <ImageView
                android:id="@+id/icon_04"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_album_circle_bg"
                android:padding="1dp"
                android:src="@color/home_add_and_like_bg"/>
        </com.fuexpress.kr.ui.view.RatioLayout>
        <com.fuexpress.kr.ui.view.RatioLayout
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:picRatio="1">

            <ImageView
                android:id="@+id/icon_05"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_album_circle_bg"
                android:padding="1dp"
                android:src="@color/home_add_and_like_bg"/>
        </com.fuexpress.kr.ui.view.RatioLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/default_bg"></LinearLayout>
</LinearLayout>