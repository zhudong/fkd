<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        style="@style/Layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment_item_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pay_alipay"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/payment_item_name_tv"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            style="@style/system_Mytextsize_gray_11"
            android:textSize="12sp"
            android:text="@string/String_ali_pay"/>

        <CheckedTextView
            android:id="@+id/payment_item_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/listChoiceBackgroundIndicator"
            />
    </LinearLayout>
</LinearLayout>
