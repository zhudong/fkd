<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_for_store_fragment_detail_cover"
        android:layout_width="match_parent"
        android:layout_height="167dp" />

    <TextView
        android:id="@+id/tv_for_store_fragment_detail_merchantname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="FASHION WITH ME"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_for_store_fragment_detail_address"
        style="@style/system_Mytextsize_gray_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:drawableLeft="@mipmap/pin1"
        android:drawablePadding="5dp"
        android:text="我是地址地址地址"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_for_store_fragment_detail_info"
            style="@style/system_Mytextsize_gray_11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_for_store_fragment_detail_pic"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/info"
            android:gravity="center_horizontal"
            android:text="@string/merchant_detail_icon_desc"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_for_store_fragment_detail_pic"
            style="@style/system_Mytextsize_gray_11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/pic"
            android:gravity="center_horizontal"
            android:text="@string/merchant_detail_icon_image" />


        <TextView
            android:id="@+id/tv_for_store_fragment_detail_follows"
            style="@style/system_Mytextsize_gray_11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/focus_person"
            android:gravity="center_horizontal"
            android:text="关注者 168" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_for_store_fragment_detail_attention"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_btn_bg_red_more_radius"
        android:gravity="center"
        android:text="@string/String_for_home_item_add_attention"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>