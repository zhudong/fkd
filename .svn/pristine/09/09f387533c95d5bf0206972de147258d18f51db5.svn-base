<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_parcel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="left"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:text="@string/String_parcle_name"
        android:textColor="@color/black_parcel"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/default_bg" />

    <LinearLayout
        android:id="@+id/ll_parcels_container"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/default_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/String_shipping_info"
            android:textColor="@color/gray_999"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_parcel_shipping_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="韩中包税空运，5-7天到达"
                android:textColor="@color/black_parcel"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_parcel_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总种量：10.85KG"
                android:textColor="@color/black_parcel"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_parcel_shipping_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费：￥130.00"
                android:textColor="@color/black_parcel"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>