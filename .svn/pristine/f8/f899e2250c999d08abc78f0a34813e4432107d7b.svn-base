<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhudong="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.fuexpress.kr.ui.view.TitleBarView
            android:id="@+id/pick_up_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhudong:text="@string/home_fg_help_03" />

        <ScrollView
            android:id="@+id/pick_up_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/layout_style"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/all_items"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/pick_up_add_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_bg"
                        android:padding="0dp"
                        android:textSize="13sp"
                        android:textColor="@color/white_fefe"
                        android:text="@string/add_item" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.fuexpress.kr.ui.view.CustomListView
                        android:id="@+id/pick_up_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp" />

                    <LinearLayout
                        android:id="@+id/pick_up_empty_layout"
                        style="@style/layout_style"
                        android:layout_height="240dp"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/demand_none" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pick_up_empty_msg"
                            android:textColor="@color/gray_999"
                            android:textSize="15sp" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/pick_up_rate_layout"
                    android:layout_marginTop="10dp"
                    style="@style/layout_style"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/pick_up_exchange_rate"
                        android:textColor="@color/gray_666"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/pick_up_rate_msg_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/black_0"/>
                        <TextView
                            android:id="@+id/pick_up_rate_msg_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/black_0"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/layout_style"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/item_grand_total"
                        android:textColor="@color/gray_666"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/pick_up_service_fee_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <!--    <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₩10,000*5*2%=₩1,000"
                                    android:textColor="@color/black"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₩10,000*5*2%=₩1,000"
                                    android:textColor="@color/black"
                                    android:textSize="13sp" />-->
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/fee_list_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩10,000*5*2%=₩1,000"
                                android:textColor="@color/red"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/pick_up_service_waring_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="@string/replenish_services_waring_msg"
                            android:textColor="@color/gray_999"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pick_up_payment_layout"
                    style="@style/layout_style"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/pick_up_payment"

                        android:textColor="@color/gray_666"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pick_up_balance_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="@string/pick_up_payment_balance"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/pick_up_payment_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/pick_up_grand_total_title"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pick_up_grand_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red_e80010"
                android:textSize="15sp" />
            <TextView
                android:layout_gravity="bottom"
                android:text="@string/include_service_fee"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/pick_up_submit_btn"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@color/title_bar_black"
            android:padding="0dp"
            android:text="@string/pick_up_submit"
            android:textColor="@color/white_fefe"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>
