<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:longer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    >

    <com.fuexpress.kr.ui.view.TitleBarView
        android:id="@+id/title_in_address_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        longer:text="@string/address_manager"/>

    <LinearLayout
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <com.fuexpress.kr.ui.view.wheel.ClearEditTextOrg
            android:id="@+id/ed_address_search"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_search_view"
            android:drawableLeft="@mipmap/search_small"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="@string/search_result_title"
            android:imeOptions="actionSearch"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="12sp"/>
    </LinearLayout>

    <com.fuexpress.kr.ui.view.RefreshListView
        android:id="@+id/rfl_in_address_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"/>
</LinearLayout>
